<!-- Configuration DataSource pour PongEchec -->
<!-- Ã€ ajouter dans standalone.xml dans la section <datasources> -->

<datasource jndi-name="java:/PongEchecDS" 
            pool-name="PongEchecDS" 
            enabled="true" 
            use-java-context="true" 
            statistics-enabled="${wildfly.datasources.statistics-enabled:${wildfly.statistics-enabled:false}}">
    <connection-url>jdbc:postgresql://localhost:5432/pongechec_db</connection-url>
    <driver>postgresql</driver>
    <security>
        <user-name>pongechec_user</user-name>
        <password>votre_mot_de_passe</password>
    </security>
    <validation>
        <valid-connection-checker class-name="org.jboss.jca.adapters.jdbc.extensions.postgres.PostgreSQLValidConnectionChecker"/>
        <exception-sorter class-name="org.jboss.jca.adapters.jdbc.extensions.postgres.PostgreSQLExceptionSorter"/>
    </validation>
</datasource>
